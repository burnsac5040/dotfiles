# desc: open the selected file with the default editor
# from: https://github.com/ahmedelgabri/dotfiles/blob/master/config/zsh.d/zsh/functions/fe

emulate -L zsh

fe() {
  local files
  files=($(fzf --query="$1" --multi --select-1 --exit-0))
  [[ -n "$files" ]] && ${EDITOR:-vim} "${files[@]}"
}

fe "$@"

# vim:ft=zsh:
