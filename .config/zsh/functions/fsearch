# desc: search fonts on system

fsearch() {
  fc-list : file family \
    | sed -n -e 's#/Users/lucasburns/Library/Fonts##p' \
    | rg '^/' | sort | sed 's|/||' \
    | awk -F'.' '{print $1}' \
    | fzf --query="${1:-}"
}

font=$(fsearch "$@")

[[ -n "$font" ]] && pbcopy <<< "$font"

# system_profiler SPFontsDataType | rg "$1"
# atsutil fonts -list

